<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderForm">
  <FrameLayout
      android:id="@+id/frameLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="המוצרים מוכנים אחרי שלושה ימי עסקים מרגע ההזמנה"
      android:textSize="17dp"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <TextView
          android:id="@+id/tv1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="50sp"
          android:textStyle="bold"
          android:layout_gravity="center"
          android:textColor="@color/black"
          android:layout_marginTop="20dp"
          android:text=""/>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:orientation="horizontal">
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:inputType="number"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity=""
            android:text="כמות:"
            android:textSize="40dp"/>

      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:layout_gravity="end"
          android:orientation="horizontal">
        <EditText
            android:id="@+id/etText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text=""
            android:hint="afargaerge"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="מלל:"
            android:textSize="40dp"/>

      </LinearLayout>
      <EditText
          android:id="@+id/etClientName"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:textSize="30sp"
          android:hint="שם לקוח"
          android:text=""
          android:textStyle="bold"
          android:layout_gravity="center"
          android:layout_marginTop="30dp"
          />
      <EditText
          android:id="@+id/etPhoneNumber"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:textSize="30sp"
          android:hint="מספר פלאפון"
          android:text=""
          android:textStyle="bold"
          android:layout_gravity="center"
          android:layout_marginTop="30dp"
          android:inputType="number"
          />
      <Button
          android:id="@+id/btnArrivalTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="שעת הגעה"
          android:textSize="35sp"
          android:background="@drawable/custom_button"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"/>
      <Button
          android:id="@+id/btnConfirmOrder"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="אישור"
          android:textSize="40sp"
          android:background="@drawable/custom_button"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"/>
    </LinearLayout>
  </ScrollView>

</LinearLayout>